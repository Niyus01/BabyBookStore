<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#35CE3B"
    android:gravity="center_horizontal"
    tools:context=".SelectBookActivity">


    <TextView
        android:id="@+id/editable_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="serif"
        android:drawSelectorOnTop="false"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editable_item"
        android:layout_marginTop="30dp"
        android:drawSelectorOnTop="false"
        android:fontFamily="serif"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Add to my list"
        android:layout_gravity="center_horizontal"
        android:enabled="true"
        android:layout_below="@+id/textBook"
        android:id="@+id/btnSave"/>



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Check the list"
        android:paddingHorizontal="20dp"
        android:id="@+id/btnList"/>

</LinearLayout>